[
    {
        "commande" : "tar",
        "description" : "Compresser ou décompresser un fichier",
        "options" : 
        [
            {   
                "option" : "-cf",
                "description" : "Créer une archive",
                "exemple" : "tar -cf archive.tar fichier1 fichier2"
            },
            {   
                "option" : "-xf",
                "description" : "Extraire une archive",
                "exemple" : "tar -xf archive.tar"
            },
            {   
                "option" : "-zcf",
                "description" : "Créer une archive compressée",
                "exemple" : "tar -zcf archive.tar.gz fichier1 fichier2"
            },
            {   
                "option" : "-zxf",
                "description" : "Extraire une archive compressée",
                "exemple" : "tar -zxf archive.tar.gz"
            },
            {   
                "option" : "-tf",
                "description" : "Lister le contenu d'une archive",
                "exemple" : "tar -tf archive.tar"
            }
        ]
    },
    {
        "commande" : "grep",
        "description" : "Rechercher une chaîne de caractères dans un fichier",
        "options" : 
        [
            {   
                "option" : "-e",
                "description" : "Rechercher une expression régulière",
                "exemple" : "grep -e 'mot' fichier"
            },
            {   
                "option" : "-E",
                "description" : "Rechercher une expression régulière étendue",
                "exemple" : "grep -E 'mot1|mot2' fichier"
            },

            {   
                "option" : "-i",
                "description" : "Ignorer la casse",
                "exemple" : "grep -i 'mot' fichier"
            },
            {   
                "option" : "-v",
                "description" : "Inverser la recherche",
                "exemple" : "grep -v 'mot' fichier"
            },
            {   
                "option" : "-n",
                "description" : "Afficher le numéro de ligne",
                "exemple" : "grep -n 'mot' fichier"
            },
            {   
                "option" : "-r",
                "description" : "Rechercher récursivement dans un répertoire",
                "exemple" : "grep -r 'mot' repertoire"
            }
        ]
    },
    {
        "commande" : "find",
        "description" : "Rechercher des fichiers",
        "options" : [
            {   
                "option" : "-name",
                "description" : "Rechercher par nom",
                "exemple" : "find . -name 'fichier*'"
            },
            {   
                "option" : "-type",
                "description" : "Rechercher par type",
                "exemple" : "find . -type f"
            },
            {   
                "option" : "-size",
                "description" : "Rechercher par taille",
                "exemple" : "find . -size +1M"
            },
            {   
                "option" : "-name",
                "description" : "Exécuter une commande sur les fichiers trouvés",
                "exemple" : "find . -name 'fichier*' -exec rm {} \\;"
            }
        ]
    },
    {
        "commande" : "cp",
        "description" : "Copier des fichiers",
        "options" : [
            {   
                "option" : "-r",
                "description" : "Copier récursivement",
                "exemple" : "cp -r repertoire1 repertoire2"
            },
            {   
                "option" : "-i",
                "description" : "Demander confirmation avant d'écraser un fichier",
                "exemple" : "cp -i fichier1 fichier2"
            },
            {   
                "option" : "-u",
                "description" : "Copier uniquement si le fichier de destination est plus récent",
                "exemple" : "cp -u fichier1 fichier2"
            },
            {   
                "option" : "-v",
                "description" : "Afficher les fichiers copiés",
                "exemple" : "cp -v fichier1 fichier2"
            },
            {   
                "option" : "-n",
                "description" : "Ne pas écraser un fichier existant",
                "exemple" : "cp -n fichier1 fichier2"
            },
            {   
                "option" : "-vrn",
                "description" : "Copier récursivement sans écraser les fichiers existants",
                "exemple" : "cp -vrn repertoire1 repertoire2"
            }
        ] 
    },

    {
        "commande" : "mv",
        "description" : "Déplacer ou renommer des fichiers",
        "options" : [
            {   
                "option" : "-i",
                "description" : "Demander confirmation avant d'écraser un fichier",
                "exemple" : "mv -i fichier1 fichier2"
            },
            {   
                "option" : "-u",
                "description" : "Déplacer uniquement si le fichier de destination est plus récent",
                "exemple" : "mv -u fichier1 fichier2"
            },
            {   
                "option" : "-v",
                "description" : "Afficher les fichiers déplacés",
                "exemple" : "mv -v fichier1 fichier2"
            },
            {   
                "option" : "-n",
                "description" : "Ne pas écraser un fichier existant",
                "exemple" : "mv -n fichier1 fichier2"
            }
        ]
    },
    {
        "commande" : "rm",
        "description" : "Supprimer des fichiers",
        "options" : [
            {   
                "option" : "-r",
                "description" : "Supprimer récursivement",
                "exemple" : "rm -r repertoire"
            },
            {   
                "option" : "-i",
                "description" : "Demander confirmation avant de supprimer un fichier",
                "exemple" : "rm -i fichier"
            },
            {   
                "option" : "-v",
                "description" : "Afficher les fichiers supprimés",
                "exemple" : "rm -v fichier"
            },
            {   
                "option" : "-f",
                "description" : "Forcer la suppression",
                "exemple" : "rm -f fichier"
            }
        ]
    },
    {
        "commande" : "chmod",
        "description" : "Modifier les permissions d'un fichier",
        "options" : [
            {   
                "option" : "u",
                "description" : "Modifier les permissions de l'utilisateur",
                "exemple" : "chmod u+x fichier"
            },
            {   
                "option" : "g",
                "description" : "Modifier les permissions du groupe",
                "exemple" : "chmod g+r fichier"
            },
            {   
                "option" : "o",
                "description" : "Modifier les permissions des autres",
                "exemple" : "chmod o-w fichier"
            },
            {   
                "option" : "a",
                "description" : "Modifier les permissions de tous les utilisateurs",
                "exemple" : "chmod a+rw fichier"
            }
        ]
    }
]